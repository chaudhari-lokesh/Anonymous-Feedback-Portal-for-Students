{
  "buildCommand": "cd server && npm install && cd ../feedback\ portal && npm install && npm run build",
  "outputDirectory": "feedback portal/dist",
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://localhost:5000/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "functions": {
    "server/**/*.js": {
      "runtime": "nodejs20.x"
    }
  }
}
